{
  "name": "logzio-node-tools",
  "version": "0.0.1",
  "description": "the perfect node templates & tools",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/logzio/node-toolbox.git"
  },
  "scripts": {
    "clean": "lerna clean && rm -rf node_modules",
    "test": "jest --config jest.config.cjs",
    "compile": "rollup -c --ignore @logzio-node-toolbox/test",
    "test:watch": "jest --watch --config jest.config.cjs",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --config jest.config.cjs",
    "lint": "eslint -c .eslintrc.cjs  --quiet --color packages/**/*.js",
    "checkLicense": "license-checker | grep 'licenses:' | sort -u",
    "ncu": "lerna run upkg && yarn upkg",
    "upkg": "ncu -u"
  },
  "author": "Nir Winkler",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@lerna/batch-packages": "^3.16.0",
    "@lerna/filter-packages": "^3.18.0",
    "@lerna/project": "^3.21.0",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-typescript": "^8.1.0",
    "@rollup/plugin-node-resolve": "11.0.1",
    "@rollup/plugin-commonjs": "17.0.0",
    "@types/lodash": "^4.14.167",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "babel-jest": "^26.6.3",
    "core-js": "^3.8.2",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "lerna": "^3.22.1",
    "license-checker": "25.0.1",
    "minimist": "^1.2.5",
    "nodemon": "2.0.6",
    "npm-check-updates": "10.2.5",
    "prettier": "^2.2.1",
    "rollup": "2.35.1",
    "rollup-plugin-copy": "^3.3.0",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test && yarn compile && yarn ncu && yarn checkLicense"
    }
  },
  "engines": {
    "node": "<=15.3.0"
  },
  "volta": {
    "node": "15.4.0",
    "yarn": "1.22.10"
  }
}
